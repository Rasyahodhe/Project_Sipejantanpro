<hr class="line" />
<!-- Page Aduan Masyarakat -->
<section class="container-fluid adm_cont" id="adm" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-in-out"  data-aos-offset="200" data-aos-delay="50">
  <div class="h_adm">
    <hr />
    <h1>Masukkan <small>Masyarakat</small></h1>
    <hr />
  </div>
  <div class="container">
    <form class="p-3" method="post" action="/" enctype="multipart/form-data">
      <div class="mb-3 title_cont">
        <div>
          <label for="name" class="form-label">Nama</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div>
          <label for="judul" class="form-label">Judul</label>
          <input type="text" class="form-control" id="judul" name="judul" />
        </div>
      </div>
      <div class="input-group mb-3">
        <label class="input-group-text" for="type">Jenis Infrastruktur</label>
        <select class="form-select" id="type" name="type">
          <option selected>Pilih Jenis Insfrastruktur</option>
          <option value="jalan">Jalan</option>
          <option value="jemnbatan">Jembatan</option>
        </select>
      </div>
      <div class="form-group mb-3">
        <label for="ket">Keterangan</label>
        <textarea class="form-control" id="ket" name="ket" rows="3"></textarea>
      </div>
      <div class="mb-3">
        <label for="img_lapor">Foto</label>
        <input type="file" class="form-control" id="img_lapor" name="img_lapor"/>
      </div>
      <div class="mb-3">
        <label for="lokasi" class="form-label">Lokasi</label>
        <input
          type="text"
          class="form-control"
          id="lokasi"
          name="lokasi"
          placeholder="Masukkan Lokasi"
        />
      </div>
      <button disabled="disabled" type="submit" class="btn btn-success mt-3">Kirim Laporan</button>
    </form>
  </div>
</section>
